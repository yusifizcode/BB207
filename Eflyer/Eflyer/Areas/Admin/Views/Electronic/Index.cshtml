@model List<Electronic>
@{
    int counter = 0;
    var totalPages = ViewBag.TotalPages;
    var page = ViewBag.Page;
}
<div class="container">
    <div class="row">
        <div class="col-4 mb-3">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">ImageUrl</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach(var electronic in Model){
                        counter++;
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@electronic.Id</td>
                            <td>@electronic.Title</td>
                            <td>@electronic.Price</td>
                            <td>
                                <img src="~/uploads/electronics/@electronic.ImageUrl" width="100" height="100" />
                            </td>
                            <td>
                                <a asp-action="Update" asp-route-id="@electronic.Id" class="btn btn-warning">Update</a>
                                <a asp-action="Delete" asp-route-id="@electronic.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                   }
                 
                </tbody>
            </table>


            @if(Model.Count > 0)
            {
                <nav aria-label="...">
                    <ul class="pagination">
                        <li class="page-item @(page == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="index" asp-route-page="@(page - 1)" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        @if(page == 1)
                        
                        {
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == page ? "active" : "")" aria-current="page">
                                    <a class="page-link" asp-action="index" asp-route-page="@i">@i</a>
                                </li>
                            }
                        }
                        else if (page > 1 && page < totalPages)
                        {
                            @for (int i = page - 1; i < page + 1; i++)
                            {
                                <li class="page-item @(i == page ? "active" : "")" aria-current="page">
                                    <a class="page-link" asp-action="index" asp-route-page="@i">@i</a>
                                </li>
                            }
                        }
                        else
                        {
                            @for (int i = page - 1; i < page; i++)
                            {
                                <li class="page-item @(i == page ? "active" : "")" aria-current="page">
                                    <a class="page-link" asp-action="index" asp-route-page="@i">@i</a>
                                </li>
                            }
                        }

                        <li class="page-item @(page == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="index" asp-route-page="@(page + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>