@using ProniaBB207.Core.Models
@model List<Slider>
@{
    int count = 0;
}
<h1>
    Sliders

    <a class="btn btn-primary" asp-action="Create"> Create</a>
</h1>

<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">SubTitle</th>
                <th scope="col">Description</th>
                <th scope="col">ImageUrl</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="~/uploads/sliders/@item.ImageUrl"width="100" height="100" alt="" />
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Slider" asp-route-id=@item.Id>Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Slider" asp-route-id=@item.Id>Delete</a>
                    </td>
                </tr>

            }


        </tbody>
    </table>

</div>