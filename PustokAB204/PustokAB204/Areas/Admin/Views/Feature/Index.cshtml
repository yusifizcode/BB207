@model List<Feature>
<div class="container">
    <div class="row">
        <div class="col-3 mb-3">
            <a asp-action="Create" asp-controller="Feature" class="btn btn-outline-primary">Create Feature</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach(var item in Model){
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@Html.Raw(item.Icon)</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Update" asp-controller="Feature" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="Delete" asp-controller="Feature" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>