@using PustokAB204.ViewModels;
@model MemberRegisterVm
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
                <!-- Login Form s-->
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">I am a new customer</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label for="email">Full Name</label>
                                <input class="mb-0 form-control" asp-for="FullName"
                                       placeholder="Enter your full name">
                                       <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label for="Username">Username</label>
                                <input class="mb-0 form-control" asp-for="Username" placeholder="Enter Your Username..">
                                <span asp-validation-for="Username" class="text-danger"></span>

                            </div>
                            <div class="col-12 mb--20">
                                <label for="email">Email</label>
                                <input class="mb-0 form-control" asp-for="Email" id="email" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="Email" class="text-danger"></span>

                             </div>
                            <div class="col-lg-6 mb--20">
                                <label for="password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password" id="password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                             </div>
                            <div class="col-lg-6 mb--20">
                                <label for="password">Repeat Password</label>
                                <input class="mb-0 form-control" asp-for="RepeatPassword" id="repeat-password" placeholder="Repeat your password">
                                <span asp-validation-for="RepeatPassword" class="text-danger"></span>

                             </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
